#This Python program counts how many times a substring appears in a given string, allowing for overlapping occurrences.
def count_substring(string, sub_string):
    S1=len(string)
    S2=len(sub_string)
    count=0
    for i in range(0,S1):
        s=string[i:i+S2]
        
        if s==sub_string:
            count+=1 
    return count

if __name__ == '__main__':
    string = input().strip()
    sub_string = input().strip()
    
    count = count_substring(string, sub_string)
    print(count)
